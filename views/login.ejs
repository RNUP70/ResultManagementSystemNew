<%- include('layout/loginHeader') %>
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card card-shadow">
                <div class="card-header bg-dark text-center">
                    <h4 class="text-light">Login</h4>
                </div>
                <div class="card-body p-4">
                    <form action="/login" method="post" id="login-form">
                        <div class="mb-3">
                            <label for="email">Email </label>
                            <input type="email" name="email" id="" class="form-control form-control-lg" 
                            placeholder="Enter Email" required>
                        </div>
                        <div class="mb-3">
                            <label for="password">Password</label>
                            <input type="password" name="password" id="" class="form-control form-control-lg" 
                            required>
                        </div>
                        <div class="mb-3 d-grid">
                            <input type="submit" value="Login" name="submit" class="btn btn-primary btn-lg">
                         </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>