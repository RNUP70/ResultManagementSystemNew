<%- include('layout/studentHeader.ejs') %>
<div class="container">
    <div class="row">
    <div class="col-lg-6 mx-auto mt-4">
        <div class="card shadow ">
            <div class="card-header bg-dark text-center">
              <h4 class="text-light">Result</h4>
            </div>
            <div class="card-body p-4">
                <% if (result !== null) { %>
                    <form action="">
                        <div class="mb-3">
                            <label for="rollnumber">Roll No.</label>
                            <input type="number" name="rollnumber" value="<%= result.rollnumber %>" id="" class="form-control form-control-lg" 
                             readonly required>
                        </div>
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" value="<%= result.name %>" id="" class="form-control form-control-lg" 
                             readonly required>
                        </div>
                        <div class="mb-3">
                            <label for="score">Score</label>
                            <input type="number" name="score" value="<%= result.score %>" id="" class="form-control form-control-lg" 
                             readonly required>
                        </div>
                    </form>
                   <a href="/searchResult">Back To Search</a>
                <% } else { %>
                    <p class="text-center"> No Record Found </p>
                    <a href="/searchResult">Back To Search</a>
                    <% } %>
                    
            </div>
          </div>
    </div>
    </div>
    </div>
<%- include('layout/footer.ejs') %>  