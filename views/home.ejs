

 
<%- include('layout/header') %>
 
<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
          <% if (message) { %>
            <div class="alert alert-dismissible fade show alert-<%= message.type %>" role = "alert" ">
              <button class="btn-close" type="button" data-bs-dismiss = "alert" aria-lable = "Close"></button>
              <strong><%= message.message %> </strong>
            </div>
          <% } %>
            <div class="table-responsive">
              <% if (results != '') { %>
                <table class="table table-striped text-center my-5">
                  <thead>
                    <tr class="table-dark">
                        <th>Roll No.</th>
                        <th>Name</th>
                        <th>Date of Birth</th>
                        <th>Score</th>
                        <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% results.forEach((result,index) => { %>
                      <tr class="align-middle">
                        <td><%= result.rollnumber %> </td>
                        <td><%= result.name %> </td>
                        <td><%= result.dateofbirth %> </td>
                        <td><%= result.score%> </td>
                        <td>
                            <a href="/edit/<%= result._id %> " class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                            <a href="/delete/<%= result._id %> " class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                        </td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
    
              <% }  else { %>
                <h1 class="text-center text-scecondary mt-5"> No Record found! </h1>
                <% } %> 
           
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>  
